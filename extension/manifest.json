{
    "name": "Email this",
    "version": "0.0.1",
    "description": "A chrome extension to email web page",
    "manifest_version": 2,
    "permissions": [
        "pageCapture",
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "icons": {
        "48": "icon.png"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    }
}